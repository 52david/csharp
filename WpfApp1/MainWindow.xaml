<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Guess Game" Height="450" Width="800" Background="Beige">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="60,44,0,0" TextWrapping="Wrap" Text="Hot/Cold(0-100)" VerticalAlignment="Top" Height="54" Width="268" FontSize="30" Foreground="Blue"/>
        <Label Content="Uhadni tajne cislo 1-100" HorizontalAlignment="Left" Margin="60,98,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox  Name="Zadanie" HorizontalAlignment="Left" Margin="60,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Height="51" TextChanged="Zadanie_TextChanged"/>
        <Button Content="Skus" HorizontalAlignment="Left" Margin="328,166,0,0" VerticalAlignment="Top" Height="52" Width="129" RenderTransformOrigin="0.5,0.5" FontSize="30" Click="Button_Click" Background="Aqua" Foreground="blue">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform Angle="-0.256"/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock Name="Info" FontSize="24 " HorizontalAlignment="Left" Margin="60,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="208"/>
        <TextBlock Name="Pokusy" FontSize="24" HorizontalAlignment="Left" Margin="60,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="208"/>
        <Button Content="Reset"  HorizontalAlignment="Center" Margin="0,357,0,0" VerticalAlignment="Top" Height="47" Width="192" Click="Button_Click_1" FontSize="24"/>
        <TextBlock  Name ="Cheat" HorizontalAlignment="Left" Margin="760,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="30" FontSize="24"/>

    </Grid>
</Window>
