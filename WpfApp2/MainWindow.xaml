<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Start" HorizontalAlignment="Left" Margin="39,10,0,0" VerticalAlignment="Top" Height="102" Width="186" Click="Button_Click" FontSize="36" Background="#FF00FF08" IsEnabled="true"/>
        <Button Content="Check Result" HorizontalAlignment="Left" Margin="281,147,0,0" VerticalAlignment="Top" Height="65" Width="158" FontSize="24" Background="#FF00FFF1" Click="Button_Click_2"/>
        <TextBox HorizontalAlignment="Left" Margin="39,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="65" TextChanged="TextBox_TextChanged"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="39,280,0,0" VerticalAlignment="Top" Height="92" Width="188" Background="Red" Click="Button_Click_1" FontSize="36"/>
        <Label Content="Result Label" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Height="66" Width="230" Grid.Column="1" FontSize="36" />

    </Grid>
</Window>
