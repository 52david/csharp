<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <ComboBox Name="ComboBox_helmetPicker" HorizontalAlignment="Left" Margin="190,27,0,0" VerticalAlignment="Top" Width="160" Height="37" SelectionChanged="ComboBox_helmetPicker_SelectionChanged"/>
        <Label Name="Label_ActualArmor" Content="Label" HorizontalAlignment="Left" Margin="19,187,0,0" VerticalAlignment="Top" Height="35" Width="68"/>
        <Image Name ="Image_HelmetPlaceHolder" HorizontalAlignment="Left" Height="90" Margin="416,10,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.51,0.5"/>
        <ComboBox Name="ComboBox_bodyPicker" HorizontalAlignment="Left" Margin="190,140,0,0" VerticalAlignment="Top" Width="160" Height="34" SelectionChanged="ComboBox_bodyPicker_SelectionChanged"/>
        <Image Name="Image_BodyPlaceHolder" HorizontalAlignment="Left" Height="100" Margin="416,117,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox Name="Combox_PantsPicker" HorizontalAlignment="Left" Margin="190,247,0,0" VerticalAlignment="Top" Width="160" Height="35" SelectionChanged="Combox_PantsPicker_SelectionChanged"/>
        <Image Name="Image_PantsPlaceHolder"  HorizontalAlignment="Left" Height="100" Margin="416,232,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox Name="Combox_LegPicker"  HorizontalAlignment="Left" Margin="190,404,0,0" VerticalAlignment="Top" Width="160" Height="34" SelectionChanged="Combox_LegPicker_SelectionChanged"/>
        <Image Name="Image_LegPlaceHolder" HorizontalAlignment="Left" Height="100" Margin="416,364,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Name="Label_ArmorMultiplier"  Content="Label" HorizontalAlignment="Left" Margin="29,273,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
